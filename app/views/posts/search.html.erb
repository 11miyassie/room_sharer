<div class='main'>
  <div>
  <%= search_form_for @p, url: posts_search_path do |f| %>
    <%= f.label :title_cont, 'タイトル：' %>
    <%= f.search_field :title_cont, placeholder:'キーワード' %>
    <br>
    <%= f.label :prefecture_name_eq, '都道府県：' %>
    <%= f.collection_select :prefecture_name_eq, @prefecture_name, :name, :name, include_blank: '指定なし' %>
    <br>
    <%= f.label :price_eq, '価格：' %>
    <%= f.search_field :price_gteq, placeholder: "¥ Min" %> 〜
    <%= f.search_field :price_lteq, placeholder: "¥ Max" %>
    <br>
    <%= f.submit '検索' %>
  <% end %>
</div>
  <%# 商品一覧 %>
  <div class='post-contents'>
    <ul class='post-lists'>

      <% @results.each do |result| %>
        <li class='list'>
          <%= link_to post_path(result) do %>
          <div class="post">
            <div class='post-left'>
              <%= image_tag result.image, class: "post-img" if result.image.attached?%>
            </div>
            <div class='post-center'>
              <h3 class='top-post-title'>
                <%= result.title %>
              </h3>
              <div class='top-post-explain'>
                <%= result.explain %>
              </div>
            </div>
            <div class='post-right'>
              <div class='top-post-price'>
                <%= result.price %>円
              </div>
              <div class='post-local'>
                <%= result.local %>
              </div>
              <div class='post-building'>
                <%= result.building %>
              </div>
              <div class='post-date'>
                投稿日<%= l result.created_at, format: :long %>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
