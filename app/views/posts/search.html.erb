<div class='main'>
  <div class='search-form'>
    <%= search_form_for @p, url: posts_search_path do |f| %>
      <%= f.collection_select :prefecture_name_eq, @prefecture_name, :name, :name, include_blank: '指定なし（ 都道府県 ）' %>
      <br>
      <%= f.search_field :price_gteq, placeholder: "0" %>円以上
      <br>
      〜 <%= f.search_field :price_lteq, placeholder: "999999" %>円以下
      <br>
      <%= f.search_field :title_or_explain_or_local_or_building_or_other_cont, placeholder:'キーワード' %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
  <%# 商品一覧 %>
  <div class='post-contents'>
    <ul class='post-lists'>
      <% @results.each do |result| %>
        <li class='list'>
          <%= link_to post_path(result) do %>
          <div class="post">
            <div class='post-left'>
              <%= image_tag result.image, class: "post-img" if result.image.attached?%>
            </div>
            <div class='post-center'>
              <h3 class='top-post-title'>
                <%= result.title %>
              </h3>
              <div class='top-post-explain'>
                <%= result.explain %>
              </div>
            </div>
            <div class='post-right'>
              <div class='top-post-price'>
                <%= result.price %>円
              </div>
              <div class='post-local'>
                <%= result.local %>
              </div>
              <div class='post-building'>
                <%= result.building %>
              </div>
              <div class='post-date'>
                投稿日<%= l result.created_at, format: :long %>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
