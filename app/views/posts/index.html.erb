<div class='main'>
  <div>
  <%= search_form_for @p, url: posts_search_path do |f| %>
    <%= f.label :title_cont, 'タイトル：' %>
    <%= f.search_field :title_cont, placeholder:'キーワード' %>
    <br>
    <%= f.label :prefecture_name_eq, '都道府県：' %>
    <%= f.collection_select :prefecture_name_eq, @prefecture_name, :name, :name, include_blank: '指定なし' %>
    <br>
    <%= f.label :price_eq, '価格：' %>
    <%= f.search_field :price_gteq, placeholder: "例（5000）" %>円以上〜
    <%= f.search_field :price_lteq, placeholder: "例（10000）" %>円以下
    <br>
    <%= f.submit '検索' %>
  <% end %>
</div>
  <%# 商品一覧 %>
  <div class='post-contents'>
    <ul class='post-lists'>

      <% @posts.each do |post| %>
        <li class='list'>
          <%= link_to post_path(post) do %>
          <div class="post">
            <div class='post-left'>
              <%= image_tag post.image, class: "post-img" if post.image.attached?%>
            </div>
            <div class='post-center'>
              <h3 class='top-post-title'>
                <%= post.title %>
              </h3>
              <div class='top-post-explain'>
                <%= post.explain %>
              </div>
            </div>
            <div class='post-right'>
              <div class='top-post-price'>
                <%= post.price %>円
              </div>
              <div class='post-local'>
                <%= post.local %>
              </div>
              <div class='post-building'>
                <%= post.building %>
              </div>
              <div class='post-date'>
                投稿日<%= l post.created_at, format: :long %>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
