<div class='main'>
  <%# 商品一覧 %>
  <div class='post-contents'>
    <ul class='post-lists'>
      <li class='list'>
        <div class='search-form'>
          <%= search_form_for @p, url: posts_search_path do |f| %>
            <div class="search-form-top">
              <%= f.search_field :title_or_explain_or_local_or_building_or_other_cont, class: "search-keyword", placeholder:'キーワードで検索する' %>
              <%= f.submit '検索', class: "search-submit" %>
            </div>
            <br>
            <div class="search-form-btm">
              <%= f.collection_select :prefecture_name_eq, @prefecture_name, :name, :name, class: "search-prefecture", include_blank: '指定なし（都道府県）' %>
              <%= f.search_field :price_gteq, class: "search-price", placeholder: "0" %>円以上
              〜 <%= f.search_field :price_lteq, class: "search-price", placeholder: "999999" %>円以下
            </div>
          <% end %>
        </div>
      </li>
      <% @posts.each do |post| %>
        <li class='list'>
          <%= link_to post_path(post) do %>
          <div class="post">
            <div class='post-left'>
              <%= image_tag post.image, class: "post-img" if post.image.attached?%>
            </div>
            <div class='post-center'>
              <h3 class='top-post-title'>
                <%= post.title %>
              </h3>
              <div class='top-post-explain'>
                <%= post.explain %>
              </div>
            </div>
            <div class='post-right'>
              <div class='top-post-price'>
                <%= post.price %>円
              </div>
              <div class='post-local'>
                <%= post.local %>
              </div>
              <div class='post-building'>
                <%= post.building %>
              </div>
              <div class='post-date'>
                投稿日<%= l post.created_at, format: :long %>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
